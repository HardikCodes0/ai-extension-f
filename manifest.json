{
  "manifest_version": 3,
  "name": "AI Browser Copilot",
  "version": "1.0.0",
  "description": "AI-powered browser extension with local LLM integration for intelligent browsing assistance",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "notifications",
    "scripting",
    "alarms",
    "tabGroups",
    "webRequest"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:11434/*",
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Browser Copilot"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

